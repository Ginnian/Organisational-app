<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp"
        android:background="@android:drawable/dialog_holo_light_frame">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/journalCard_tv_title"
                android:text="Title"
                android:layout_toLeftOf="@+id/journalCard_tv_date"
                android:layout_alignParentTop="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/journalCard_tv_subject"
                android:text="Subject"
                android:layout_below="@+id/journalCard_tv_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/journalCard_tv_subject"
                android:id="@+id/journalCard_tv_entry"
                android:inputType="textMultiLine"
                android:maxLines="20"
                android:minLines="8"
                android:layout_marginTop="5dp"
                android:text="entry..."
                android:background="@drawable/button_border"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/journalCard_tv_date"
                android:text="Date"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>